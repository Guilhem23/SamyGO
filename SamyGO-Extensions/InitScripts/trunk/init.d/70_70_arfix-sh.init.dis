. /dtv/SGO.env

for i in $DISTROOT/usr/share/elfpatches/*arfix*.elfpatch
do
	ARFIX_ELFPATCH=$i
done

PID=$(pidof exeDSP)

case $1 in 
	start)
	elfpatcher -p $PID $ARFIX_ELFPATCH
	;;
	status)
	elfpatcher -c -p $PID $ARFIX_ELFPATCH
	;;
	*)
	echo "Usage: $0 {start|status}" 1>&2
	exit 0
	;;
esac
