. /dtv/SGO.env

# be careful, you are root without password!

case $1 in 
	start)
	vsftpd $SYSROOT/etc/vsftpd.conf &
	;;
	stop)
	killall -QUIT vsftpd 
	;;
	status)
	ps | grep vsftpd | grep -v grep
	;;
	*)
	echo "Usage: $0 {start|stop|status}" 1>&2
	exit 0
	;;
esac
