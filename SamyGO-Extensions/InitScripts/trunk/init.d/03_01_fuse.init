. /dtv/SGO.env

DEV_FILE=/dtv/fuse

case $1 in 
    start)
    	insmod $SYSROOT/lib/modules/fuse.ko
	[ -e "$DEV_FILE" ] || mknod $DEV_FILE -m 0666 c 10 229
	;;
    stop)
    	rmmod fuse
	;;
    status)
	;;
    *)
    echo "Usage: $0 {start|stop}" 1>&2
    exit 0
    ;;
esac
